<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="iconTint">@color/black_day_black_night</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_text_padding</item>
        <item name="android:textColor">@color/black_day_black_night</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_on_main_screen</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="cornerRadius">@dimen/corner_radius_of_main_screen_buttons</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="UpdateIfEmptyButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black_day_white_night</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">@color/white_day_black_night</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingHorizontal">14dp</item>
    </style>

    <style name="SettingsActivityText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textColor">@color/black_day_white_night</item>
        <item name="android:textSize">@dimen/text_size_on_settings_screen</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="ActivityHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_day_white_night</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="ArrowBack">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:src">@drawable/arrow_back_icon</item>
        <item name="android:background">@null</item>
        <item name="tint">@color/black_day_white_night</item>
    </style>

    <style name="TrackDescriptionOnTrackInfoActivity">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="LeftSideTrackDescriptionOnTrackInfoActivity" parent="TrackDescriptionOnTrackInfoActivity">
        <item name="android:textColor">@color/grey2_day_grey2_night</item>
    </style>

    <style name="RightSideTrackDescriptionOnTrackInfoActivity" parent="TrackDescriptionOnTrackInfoActivity">
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>

    <style name="NothingFoundText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>

    <style name="TabText">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="BottomNavigationView">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/black_day_white_night</item>
    </style>

    <style name="NewPlaylistNameAndDescriptionEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColorHint">@color/black_day_white_night</item>
        <item name="android:textColor">@color/black_day_white_night</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="maxLines">1</item>
    </style>

</resources>