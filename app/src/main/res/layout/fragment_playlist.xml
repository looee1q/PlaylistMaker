<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:id="@+id/coordinator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey1"
    tools:context="com.example.playlistmaker.ui.mediateca.playlists.fragment.PlaylistFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/peek_height_for_bottom_sheet_in_playlist">

        <ImageButton
            android:id="@+id/back_arrow_button"
            style="@style/ArrowBack"
            app:tint="@color/black_day_black_night"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/left_16dp_boundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="16dp"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/right_16dp_boundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="16dp"/>

        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/share_app_icon"
            android:paddingHorizontal="4dp"
            android:paddingVertical="3dp"
            app:tint="@color/black_day_black_night"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/left_16dp_boundary"/>

        <ImageView
            android:id="@+id/more_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/more_icon"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            app:tint="@color/black_day_black_night"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/share_icon"/>

        <TextView
            android:id="@+id/playlist_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/PlaylistFragmentText"
            tools:text="300 минут"
            app:layout_constraintStart_toStartOf="@id/left_16dp_boundary"
            app:layout_constraintBottom_toTopOf="@id/share_icon"/>

        <ImageView
            android:id="@+id/dot"
            android:src="@drawable/track_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            app:tint="@color/black_day_black_night"
            app:layout_constraintStart_toEndOf="@id/playlist_duration"
            app:layout_constraintTop_toTopOf="@id/playlist_duration"
            app:layout_constraintBottom_toBottomOf="@id/playlist_duration"/>

        <TextView
            android:id="@+id/playlist_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PlaylistFragmentText"
            tools:text="98 треков"
            app:layout_constraintStart_toEndOf="@id/dot"
            app:layout_constraintBottom_toBottomOf="@id/playlist_duration"/>

        <TextView
            android:id="@+id/playlist_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/PlaylistFragmentText"
            android:visibility="gone"
            tools:text="2022 20 20 20 20 2 02 20 2 02 0"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/left_16dp_boundary"
            app:layout_constraintEnd_toEndOf="@id/right_16dp_boundary"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toTopOf="@id/playlist_duration"/>

        <TextView
            android:id="@+id/playlist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:fontFamily="@font/ys_display_bold"
            android:textFontWeight="700"
            android:textColor="@color/black_day_black_night"
            tools:text="Best songs 2021"
            android:layout_marginBottom="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintStart_toStartOf="@id/left_16dp_boundary"
            app:layout_constraintEnd_toEndOf="@id/right_16dp_boundary"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintBottom_toTopOf="@id/playlist_description"/>

        <ImageView
            android:id="@+id/playlist_cover"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/playlist_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintDimensionRatio="W,1:1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_rounded"
        app:behavior_hideable="false"
        app:behavior_peekHeight="@dimen/peek_height_for_bottom_sheet_in_playlist"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/bottom_sheet_indicator"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_tracks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="13dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_indicator"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/activity_track_unit"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View android:id="@+id/overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/semi_transparent_black"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bottom_sheet_rounded"
        app:behavior_hideable="true"
        app:behavior_peekHeight="276dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <View
            android:id="@+id/bottom_sheet_indicator_2"
            android:layout_width="50dp"
            android:layout_height="4dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/bottom_sheet_indicator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <include
            android:id="@+id/playlist_brief_info"
            android:layout_height="@dimen/list_element_height"
            android:layout_width="match_parent"
            layout="@layout/playlist_small_unit"
            app:layout_constraintTop_toBottomOf="@id/bottom_sheet_indicator_2"
            android:layout_marginTop="12dp"/>

        <TextView
            android:id="@+id/share"
            android:text="@string/share"
            style="@style/TextViewInPlaylistMenu"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/playlist_brief_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/edit"
            android:text="@string/edit_information"
            style="@style/TextViewInPlaylistMenu"
            app:layout_constraintTop_toBottomOf="@id/share"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/delete"
            android:text="@string/delete_playlist"
            style="@style/TextViewInPlaylistMenu"
            app:layout_constraintTop_toBottomOf="@id/edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>